@model IEnumerable<BarThread>
@if (Model != null && Model.Count() > 0)
{
    <div class="tn-box tn-widget tn-widget-content tn-corner-all">
        <div class="tn-box-header tn-widget-header tn-corner-top tn-border-bottom">
            <h3 class="tn-helper-reset">
                Ta的其他帖子</h3>
        </div>
        <div class="tn-box-content tn-widget-content tn-corner-bottom">
            <ul class="tn-list tn-list-level">
                @foreach (var thread in Model)
                {
                    <li><em class="tn-count tn-text-note tn-helper-right">@thread.PostCount</em>
                        @Html.Link(thread.Subject, SiteUrls.Instance().ThreadDetail(thread.ThreadId), thread.Subject)</li>
                }
            </ul>
        </div>
    </div>
}